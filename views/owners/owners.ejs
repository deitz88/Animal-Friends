<%- include('../partials/header') %>
 <%- include('../partials/nav') %>
  <div class="container">
    <div id="search-row" class="row">
      <h2 class="col s4 blue-grey-text text-darken-2">Owners</h2>
      <form action="/owners" method="GET">
        <div class="col s3 offset-s3">
          <!-- search -->
          <div class="input-field">
            <input id="search" type="search" name="name" placeholder="search owner" value="<%= name %>" autocomplete="off">
            <i class="material-icons">close</i>
          </div>
        </div>
        <div class="col s2">
          <!-- <p>
            <label for="sort-cohort">
              <input name="sort" type="radio" id="sort-cohort" value="cohort" class="with-gap"
                <%= sortKey === 'cohort' ? 'checked' : '' %> >
              <span>Sort by Cohort</span>
            </label>
          </p> -->
          <p>
            <label for="sort-name">
              <input name="sort" type="radio" id="sort-name" value="name" class="with-gap"
                <%= sortKey === 'name' ? 'checked' : '' %> >
              <span>Sort by Name</span>
            </label>
          </p>
        </div>
      </form>
    </div>
    <div class="row">
      <div id="owners" class="col s12">
        <% owners.forEach(function(owner) { %>
          <div class="card blue-grey">
            <div class="card-content white-text">
              <div>
                <span class="card-title">
                  <% if (owner.avatar) { %>
                    <img src="<%= owner.avatar %>" alt="" class="circle responsive-img">&nbsp;&nbsp;
                  <% } else { %>
                    <i class="small material-icons">perm_identity</i>
                  <% } %>
                  <span class="student-name"><%= owner.name %></span>
              </div>
              <ul class="collection">
                <% owner.pets.forEach(function(pet) { %>
                  <li class="collection-item blue-grey-text text-darken-2">
                    

              

                    <!-- Add delete form - don't forget to install method-override -->
                    <span class="title"><%- pet.text %></span>
                    <% if (owner._id.equals(user && user._id)) { %>
                      <form action="/pets/<%= fact._id %>?_method=DELETE" method="POST" class="secondary-content">
                        <button type="submit" class="btn-small red-text">X</button>
                      </form>
                    <% } %>
                  </li>
                <% }) %>
              </ul>

              <% if (owner._id.equals(user && user._id)) { %>
                <div class="card-action">
                  <form action="/pets" method="POST">
                    <input type="text" name="text" class="white-text">
                    <button type="submit" class="btn white-text">Add Pet</button>
                  </form>
                </div>
              <% } %>
         
             
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
  <%- include('../partials/footer') %>
